        <button class="btn btn-success apply" data-url="/themes/apply?stylesheetname=$pluginName">Apply</button>
        <button class="btn btn-warning update" data-url="/themes/update?stylesheetname=$pluginName">Update</button>
        <button class="btn btn-danger delete" data-url="/themes/delete?stylesheetname=$pluginName">Delete</button>
        <span>$pluginName</span>
      </li>

#   end for
